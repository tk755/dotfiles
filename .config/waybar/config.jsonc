{
    "layer": "top",
    "position": "top",
    "reload_style_on_change": true,
    "margin-left": 8,
    "margin-right": 8,
    "margin-top": 8,

    "modules-left": [
        "disk",
        "memory",
        "cpu"
    ],
    "modules-center": [
        "sway/workspaces"
    ],
    "modules-right": [
        "battery",
        "pulseaudio",
        "network",
        "clock"
    ],

    "sway/workspaces": { 
        "disable-scroll": true, 
        "format": "{name}" 
    },

    "disk": {
        "path": "/",
        "interval": 10,
        "format": " {percentage_used}%",
        "format-alt": " {percentage_used}%",
        "tooltip-format": "{used} / {total} ({percentage_used}%)"
    },
    "memory": {
        "interval": 1,
        "format": " {percentage}%",
        "tooltip-format": "{used:0.2f}GiB / {total:0.2f}GiB ({percentage}%)"
    },
    "cpu": {
        "interval": 1,
        "format": " {usage}%"
    },

    "pulseaudio": {
        "interval": 2,
        "format": "{volume}% {icon}",
        "format-muted": "Muted ",
        "format-icons": ["", "", ""],
        "scroll-step": 2,
        "on-click": "pactl set-sink-mute @DEFAULT_SINK@ toggle",
        "on-scroll-up": "pactl set-sink-volume @DEFAULT_SINK@ +2%",
        "on-scroll-down": "pactl set-sink-volume @DEFAULT_SINK@ -2%"
    },

    "battery": {
        "interval": 10,
        "full-at": 97,
        "format": "{capacity}% {icon}",
        "format-charging": "{capacity}% ",
        "format-plugged":  "{capacity}% ",
        "format-full":     "Full ",
        "format-icons": ["", "", "", "", ""],
        "states": { "good": 60, "warning": 30, "critical": 15 },
        "hide-if-unsupported": true
    },

    "network": {
        "interval": 5,
        "format-wifi":       "{essid} ({signalStrength}%) ",
        "format-ethernet":   "{ipaddr}/{cidr} ",
        "format-disconnected": "Disconnected ",
        "tooltip-format":    "{ifname} — {ipaddr}"
    },

    "clock": {
        "interval": 1,
        "format": "{:%I:%M:%S %p} ",
        "tooltip-format": "<tt>{calendar}</tt>",
        "calendar": {
            "mode": "month",
            "format": {
                "today": "<span background='#FFFFFF' color='#1C1E20'>{}</span>"
            }
        }
    }
}
