bindsym $mod+Escape exec dmenu_run

bindsym $mod+$olkb03 split horizontal ; exec google-chrome
bindsym $mod+$olkb04 split horizontal ; exec google-chrome --incognito
bindsym $mod+$olkb13 split horizontal ; exec i3-sensible-terminal
bindsym $mod+$olkb14 split horizontal ; exec thunar
bindsym $mod+$olkb23 split horizontal ; exec code
bindsym $mod+$olkb24 split horizontal ; nop 

bindsym $mod+$shift+$olkb03 split vertical ; exec google-chrome
bindsym $mod+$shift+$olkb04 split vertical ; exec google-chrome --incognito
bindsym $mod+$shift+$olkb13 split vertical ; exec i3-sensible-terminal
bindsym $mod+$shift+$olkb14 split vertical ; exec thunar 
bindsym $mod+$shift+$olkb23 split vertical ; exec code
bindsym $mod+$shift+$olkb24 split vertical ; nop 

