# mod key
set $mod Mod4

# layer key
set $shift Shift

# olkb keys (row, column)
set $olkb00 Q
set $olkb01 W
set $olkb02 E
set $olkb03 R
set $olkb04 T
set $olkb05 Y
set $olkb06 U
set $olkb07 I
set $olkb08 O
set $olkb09 P
set $olkb10 A
set $olkb11 S
set $olkb12 D
set $olkb13 F
set $olkb14 G
set $olkb15 H
set $olkb16 J
set $olkb17 K
set $olkb18 L
set $olkb19 colon
set $olkb20 Z
set $olkb21 X
set $olkb22 C
set $olkb23 V
set $olkb24 B
set $olkb25 N
set $olkb26 M
set $olkb27 comma
set $olkb28 period
set $olkb29 slash

# workspaces
set $ws1 "1"
set $ws2 "2"
set $ws3 "3"
set $ws4 "4"
set $ws5 "5"
set $ws6 "6"
set $ws7 "7"
set $ws8 "8"
set $ws9 "9"


# ██╗    ██╗ ██████╗ ██████╗ ██╗  ██╗███████╗██████╗  █████╗  ██████╗███████╗███████╗
