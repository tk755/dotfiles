# i3 config file (v4)

# Set mod key to SUPER
set $mod Mod4

### FONT

# Font for window titles. Will also be used by the bar unless a different font
# is used in the bar {} block below.
font pango:monospace 8

# This font is widely installed, provides lots of unicode glyphs, right-to-left
# text rendering and scalability on retina/hidpi displays (thanks to pango).
#font pango:DejaVu Sans Mono 8

# Before i3 v4.8, we used to recommend this one as the default:
# font -misc-fixed-medium-r-normal--13-120-75-75-C-70-iso10646-1
# The font above is very space-efficient, that is, it looks good, sharp and
# clear in small sizes. However, its unicode glyph coverage is limited, the old
# X core fonts rendering does not support right-to-left and this being a bitmap
# font, it doesnâ€™t scale on retina/hidpi displays.

#
# Variables
#

# super key
set $super Mod4

# layer key
set $fn Shift

# olkb keys (row, column)
set $olkb00 Q
set $olkb01 W
set $olkb02 E
set $olkb03 R
set $olkb04 T
set $olkb05 Y
set $olkb06 U
set $olkb07 I
set $olkb08 O
set $olkb09 P
set $olkb10 A
set $olkb11 S
set $olkb12 D
set $olkb13 F
set $olkb14 G
set $olkb15 H
set $olkb16 J
set $olkb17 K
set $olkb18 L
set $olkb19 colon
set $olkb20 Z
set $olkb21 X
set $olkb22 C
set $olkb23 V
set $olkb24 B
set $olkb25 N
set $olkb26 M
set $olkb27 comma
set $olkb28 period
set $olkb29 slash

# workspaces
set $ws10 "[4] Play"
set $ws11 "[5] Messages"
set $ws12 "[6] Browse"
set $ws20 "[7] Research"
set $ws21 "[8] Project I"
set $ws22 "[9] Project II"
set $ws23 "[0] Co-pilot"

#
# Modes
#

mode "resize" {
        # j (left)  decreses window width
        # ; (right) increases window width
        # k (down)  decreses window height
        # l (up)    increases window height

        # using jkl;
        bindsym $olkb16 resize shrink width 5 px or 5 ppt
        bindsym $olkb17 resize shrink height 5 px or 5 ppt
        bindsym $olkb18 resize grow height 5 px or 5 ppt
        bindsym $olkb19 resize grow width 5 px or 5 ppt

        # exit resize mode
        bindsym BackSpace mode "default"
        bindsym Return mode "default"
        bindsym Escape mode "default"
}

#
# Workspaces
#

# switch to workspace
bindsym $super+$olkb10 workspace $ws10
bindsym $super+$olkb11 workspace $ws11
bindsym $super+$olkb12 workspace $ws12
bindsym $super+$olkb13 scratchpad show
bindsym $super+$olkb20 workspace $ws20
bindsym $super+$olkb21 workspace $ws21
bindsym $super+$olkb22 workspace $ws22
bindsym $super+$olkb23 workspace $ws23

# move container to workspace
bindsym $super+$fn+$olkb10 move container to workspace $ws10
bindsym $super+$fn+$olkb11 move container to workspace $ws11
bindsym $super+$fn+$olkb12 move container to workspace $ws12
bindsym $super+$fn+$olkb13 move scratchpad
bindsym $super+$fn+$olkb20 move container to workspace $ws20
bindsym $super+$fn+$olkb21 move container to workspace $ws21
bindsym $super+$fn+$olkb22 move container to workspace $ws22
bindsym $super+$fn+$olkb23 move container to workspace $ws23

# workspace back-and-forth
workspace_auto_back_and_forth false
bindsym $super+Tab workspace back_and_forth

# cycle between workspaces on the current display
bindsym $super+$olkb24 workspace prev_on_output
bindsym $super+$olkb25 workspace next_on_output

#
# Displays
#

# focus on another display
bindsym $super+$olkb14 focus output left
bindsym $super+$olkb15 focus output right

# move container to another display
bindsym $super+$fn+$olkb14 move container to output left; focus output left
bindsym $super+$fn+$olkb15 move container to output right; focus output right

# move workspace to another display
bindsym $super+$fn+$olkb24 move workspace to output left
bindsym $super+$fn+$olkb25 move workspace to output right


#
# Containers
#

# change container focus
bindsym $super+$olkb16 focus left
bindsym $super+$olkb17 focus down
bindsym $super+$olkb18 focus up
bindsym $super+$olkb19 focus right

# move focused container
bindsym $super+$fn+$olkb16 move left
bindsym $super+$fn+$olkb17 move down
bindsym $super+$fn+$olkb18 move up
bindsym $super+$fn+$olkb19 move right

# focus parent/child
bindsym $super+Return focus parent
bindsym $super+$fn+Return focus child

# change container layout
bindsym $super+$olkb27 layout toggle split
bindsym $super+$fn+$olkb27 layout toggle tabbed stacking

# change splitting orientation
bindsym $super+$olkb28 split v
bindsym $super+$olkb29 split h

# fullscreen focused container
bindsym $super+$olkb26 fullscreen toggle

# resize focused container
bindsym $super+$fn+$olkb26 mode "resize"

# kill focused container
bindsym $super+BackSpace kill

#
# Floating Containers
#

# drag floating windows with Mouse+$super
floating_modifier $super

# toggle focus between tiling and floating windows
bindsym $super+space focus mode_toggle

# toggle between tiling and floating mode
bindsym $super+$fn+space floating toggle

#
# i3 Reload, Restart, and Exit
#

# reload configuration file
bindsym $super+Escape reload

# restart i3 inplace (preserves current layout)
bindsym $super+$fn+Escape restart

# exit i3 (logs out of X session)
bindsym $super+$fn+BackSpace exec "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -B 'Yes, exit i3' 'i3-msg exit'"

#
# Launch Programs
#

bindsym $super+$olkb00 exec dmenu_run
bindsym $super+$olkb01 exec i3-sensible-terminal
bindsym $super+$olkb02 exec subl -n
bindsym $super+$olkb03 exec google-chrome
bindsym $super+$olkb04 exec google-chrome --incognito
bindsym $super+$olkb05 nop
bindsym $super+$olkb06 nop
bindsym $super+$olkb07 nop
bindsym $super+$olkb08 nop
bindsym $super+$olkb09 exec spotify

#
# Startup Programs and Scripts
#

exec_always --no-startup-id $HOME/.config/i3/restart.sh

# exec_always --no-startup-id $HOME/.config/polybar/launch.sh

exec --no-startup-id $HOME/.config/i3/startup.sh

#
# Workspace configurations
#

for_window [class="Spotify"] move to workspace $ws10

#
# i3 Bar
#

# Start i3bar to display a workspace bar and system information
bar {
       status_command i3status
}
