set $olkb26 M
set $olkb27 comma
set $olkb28 period
set $olkb29 slash

# workspaces
set $ws1 "1"
set $ws2 "2"
set $ws3 "3"
set $ws4 "4"
set $ws5 "5"
set $ws6 "6"
set $ws7 "7"
set $ws8 "8"
set $ws9 "9"

# colors 
set_from_resource $fg foreground    #D8DEE9
set_from_resource $bg background    #2E3440
set_from_resource $fbg color5       #2E3440
set_from_resource $ind color4       #2E3440


# ██╗    ██╗ ██████╗ ██████╗ ██╗  ██╗███████╗██████╗  █████╗  ██████╗███████╗███████╗
